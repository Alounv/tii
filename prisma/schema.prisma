generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("VITE_DATABASE_URL")
  shadowDatabaseUrl = env("VITE_SHADOW_DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  name       String?
  avatar_url String?
  objectives Objective[]
}

model Objective {
  id             String    @id @default(uuid())
  userId         String
  description    String
  duration       Int
  cost           Int
  coach          String
  motivation     String
  motivation_url String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  success        Success[]
}

model Success {
  id          String    @id @default(uuid())
  objectiveId String
  objective   Objective @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  date        DateTime @default(now())
}
